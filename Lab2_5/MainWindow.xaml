<Window x:Class="Lab2_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2_5"
        mc:Ignorable="d"
        Title="Menu" Height="200" Width="200">
    <DockPanel>
        <Menu x:Name="File" DockPanel.Dock="Top" Background="#FFAFAFAF">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="MnuOpen_Click" />
                <MenuItem Header="_Save" Click="MnuSave_Click"/>
                <Separator />
            </MenuItem>
        </Menu>
        <TextBox Name="txtEditor" />
    </DockPanel>
</Window>
